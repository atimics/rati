# Docker Development Environment Configuration
# Copy this file to .env in the docker/ directory

# =============================================================================
# EXTERNAL SERVICE CONFIGURATION
# =============================================================================

# Infura URL for EVM fork (required for realistic testing)
INFURA_URL=https://base-mainnet.infura.io/v3/YOUR_INFURA_KEY

# =============================================================================
# BUNDLR/ARWEAVE CONFIGURATION
# =============================================================================

# Bundlr private key for testing uploads
BUNDLR_PRIVATE_KEY={"kty":"RSA","n":"test_key_here"}

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# MongoDB URI (used when --profile with-mongo is specified)
MONGODB_URI=mongodb://admin:localdev@mongo:27017/orb_agents?authSource=admin

# =============================================================================
# SOLANA CONFIGURATION
# =============================================================================

# Solana test validator configuration
SOLANA_SLOTS_PER_EPOCH=432000
SOLANA_FAUCET_AMOUNT=1000

# =============================================================================
# EVM CONFIGURATION
# =============================================================================

# Anvil configuration
ANVIL_BLOCK_TIME=1
ANVIL_FORK_BLOCK_NUMBER=17000000
ANVIL_ACCOUNTS=10
ANVIL_BALANCE=10000

# =============================================================================
# WORMHOLE CONFIGURATION
# =============================================================================

# Guardian private key for local Wormhole network
GUARDIAN_PRIVATE_KEY=/keys/guardian.key

# Bridge configuration
BRIDGE_ADDRESS=0x0000000000000000000000000000000000000000

# =============================================================================
# DEVELOPMENT FLAGS
# =============================================================================

# Enable verbose logging
VERBOSE=true

# Enable debug mode
DEBUG=true

# Skip heavy operations (faster startup)
SKIP_PREFUND=false

# =============================================================================
# RESOURCE LIMITS
# =============================================================================

# Memory limits for containers (in MB)
SOLANA_MEMORY_LIMIT=2048
EVM_MEMORY_LIMIT=1024
WORMHOLE_MEMORY_LIMIT=512
NODE_MEMORY_LIMIT=4096

# CPU limits (as fraction of 1 CPU)
SOLANA_CPU_LIMIT=1.0
EVM_CPU_LIMIT=0.5
WORMHOLE_CPU_LIMIT=0.5
NODE_CPU_LIMIT=2.0