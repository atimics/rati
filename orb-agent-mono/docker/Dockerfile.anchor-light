FROM node:20-slim

# Install minimal dependencies
RUN apt-get update && apt-get install -y \
    curl \
    git \
    ca-certificates \
    && apt-get clean && rm -rf /var/lib/apt/lists/*

# Install pnpm
RUN npm install -g pnpm

# Install Solana CLI (pre-built binary)
ARG SOLANA_VERSION=1.18.17
RUN curl -sSfL https://release.solana.com/v${SOLANA_VERSION}/install | sh
ENV PATH="/root/.local/share/solana/install/active_release/bin:$PATH"

# Install Anchor CLI via npm (pre-built, no compilation needed)
RUN npm install -g @coral-xyz/anchor-cli@0.30.1

# Set up workspace
WORKDIR /workspace

# Create necessary directories
RUN mkdir -p contracts/solana-forge/deps

EXPOSE 8899 8900

CMD ["solana-test-validator", "-r", "--quiet"]