FROM node:20-bookworm

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    wget \
    git \
    build-essential \
    pkg-config \
    ca-certificates \
    && apt-get clean && rm -rf /var/lib/apt/lists/*

# Install pnpm
RUN npm install -g pnpm

# Install Solana CLI
ARG SOLANA_VERSION=1.18.17
RUN sh -c "$(curl -sSfL https://release.solana.com/v${SOLANA_VERSION}/install)"
ENV PATH="/root/.local/share/solana/install/active_release/bin:$PATH"

# Install Anchor CLI via npm (much faster than building from source)
RUN npm install -g @coral-xyz/anchor-cli@0.30.1

# Set up workspace
WORKDIR /workspace

# Create necessary directories
RUN mkdir -p contracts/solana-forge/deps

EXPOSE 8899 8900

CMD ["solana-test-validator", "-r", "--quiet"]