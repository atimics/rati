{
  "name": "rati-ai-agent",
  "version": "1.0.0",
  "description": "Intelligent AI agent for the RATi decentralized digital avatar platform",
  "main": "agent.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "node agent.js",
    "dev": "nodemon agent.js",
    "lint": "eslint *.js --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@permaweb/aoconnect": "^0.0.85",
    "arweave": "^1.15.7",
    "dotenv": "^16.4.5",
    "node-fetch": "^3.3.2",
    "openai": "^4.65.0"
  },
  "devDependencies": {
    "eslint": "^9.25.0",
    "nodemon": "^3.1.4",
    "prettier": "^3.0.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.5"
  },
  "keywords": [
    "ai",
    "agent",
    "arweave",
    "ao",
    "digital-avatar",
    "autonomous",
    "blockchain"
  ],
  "author": "RATi Community",
  "license": "MIT",
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.js",
      "**/?(*.)+(spec|test).js"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!agent.js"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    }
  }
}
