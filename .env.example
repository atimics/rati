# RATi Environment Configuration Template
# Copy this file to .env and modify the values as needed

# ==============================================
# Application Environment
# ==============================================
NODE_ENV=development
PORT=3001

# ==============================================
# JWT Configuration
# ==============================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# ==============================================
# Arweave Configuration
# ==============================================
ARWEAVE_HOST=arlocal
ARWEAVE_PORT=1984
ARWEAVE_PROTOCOL=http

# For production, use:
# ARWEAVE_HOST=arweave.net
# ARWEAVE_PORT=443
# ARWEAVE_PROTOCOL=https

# ==============================================
# AO Configuration
# ==============================================
AO_SCHEDULER=_GQ33BkPtZUcjmqzCBNxGGr3L1d_9p6u9aKGnPmPnr8
AO_MODULE=_GQ33BkPtZUcjmqzCBNxGGr3L1d_9p6u9aKGnPmPnr8

# ==============================================
# AI Provider Configuration
# ==============================================
# OpenAI
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4

# Anthropic
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# Groq
GROQ_API_KEY=your-groq-api-key
GROQ_MODEL=llama2-70b-4096

# Ollama (for local AI)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama2

# ==============================================
# Database Configuration
# ==============================================
# PostgreSQL (optional)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=rati
POSTGRES_USER=rati
POSTGRES_PASSWORD=rati_password

# ==============================================
# Redis Configuration
# ==============================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# ==============================================
# Monitoring Configuration
# ==============================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
GRAFANA_ADMIN_PASSWORD=admin

# ==============================================
# Rate Limiting
# ==============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==============================================
# Security Configuration
# ==============================================
CORS_ORIGIN=http://localhost:5173
HELMET_ENABLED=true

# ==============================================
# Logging Configuration
# ==============================================
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# ==============================================
# Development Configuration
# ==============================================
DEV_MODE=true
HOT_RELOAD=true

# ==============================================
# WebSocket Configuration
# ==============================================
WS_PORT=3002
WS_HEARTBEAT_INTERVAL=30000

# ==============================================
# Agent Configuration
# ==============================================
AGENT_MEMORY_LIMIT=512MB
AGENT_TIMEOUT=30000
AGENT_MAX_RETRIES=3

# ==============================================
# Deployment Configuration
# ==============================================
DEFAULT_WALLET_PATH=./wallets/wallet.json
DEPLOYMENT_TIMEOUT=60000
BACKUP_ENABLED=true
BACKUP_INTERVAL=3600000

# ==============================================
# Frontend Configuration (for reference)
# ==============================================
VITE_API_URL=http://localhost:3001
VITE_WS_URL=ws://localhost:3002
