    }
    
    try {
      await fs.access(scroll2Path);
    } catch {
      scroll2Path = '/app/scrolls/scroll-2.md';
    }
    
    const scroll1 = await fs.readFile(scroll1Path, 'utf-8');
    const scroll2 = await fs.readFile(scroll2Path, 'utf-8');
