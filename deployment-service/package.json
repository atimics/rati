{
  "name": "rati-deployment-service",
  "version": "1.0.0",
  "description": "Modern deployment management service for RATi digital avatars",
  "main": "server.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "cli": "node cli.js",
    "lint": "eslint *.js --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "bin": {
    "rati": "./cli.js"
  },
  "dependencies": {
    "@permaweb/aoconnect": "^0.0.85",
    "arweave": "^1.15.7",
    "axios": "^1.6.8",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "node-fetch": "^3.3.2",
    "uuid": "^10.0.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "eslint": "^9.25.0",
    "nodemon": "^3.1.4",
    "prettier": "^3.0.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "@types/jest": "^29.5.5"
  },
  "keywords": [
    "arweave",
    "ao",
    "deployment",
    "digital-avatar",
    "blockchain",
    "microservice"
  ],
  "author": "RATi Community",
  "license": "MIT",
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.js",
      "**/?(*.)+(spec|test).js"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!server.js"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    }
  }
}
