{
  "name": "rati",
  "version": "0.2.0",
  "description": "A cutting-edge decentralized digital avatar platform built on Arweave and AO",
  "main": "index.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "setup": "npm install && cd frontend && npm install && cd ../deployment-service && npm install && cd ../agent && npm install",
    "dev": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "lint": "cd frontend && npm run lint",
    "preview": "cd frontend && npm run preview",
    "deploy:genesis": "node scripts/deploy-genesis.js",
    "deploy:processes": "node scripts/deploy-processes.js",
    "deploy:enhanced": "node scripts/enhanced-deploy.js",
    "deploy:full": "node scripts/enhanced-deploy.js full",
    "deploy:frontend": "node scripts/deploy-frontend.js",
    "test-arweave": "node scripts/test-arweave.js",
    "summon-avatar": "./summon-avatar.sh",
    "start-arlocal": "docker-compose up -d arlocal",
    "stop-arlocal": "docker-compose stop arlocal",
    "agent:setup": "./setup-agent.sh",
    "agent:launch": "./launch-agents.sh 1",
    "agent:swarm": "./launch-agents.sh 5",
    "agent:logs": "docker-compose logs -f ai-agent",
    "agent:stop": "docker-compose stop ai-agent",
    "agent:build": "docker-compose build ai-agent",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:build": "docker-compose build --no-cache",
    "docker:clean": "docker-compose down -v --remove-orphans && docker system prune -f",
    "test": "npm run test:agent && npm run test:deployment && npm run test:frontend",
    "test:agent": "cd agent && npm test",
    "test:deployment": "cd deployment-service && npm test",
    "test:frontend": "cd frontend && npm test",
    "test:integration": "./test-integration.sh",
    "test:e2e": "./test-e2e.sh",
    "health:check": "./health-check.sh",
    "explorer": "./explore-agent.sh",
    "welcome": "./welcome.sh"
  },
  "keywords": [
    "arweave",
    "ao",
    "decentralized",
    "community",
    "digital-avatar",
    "ai-agent",
    "blockchain",
    "web3"
  ],
  "author": "RATi Community",
  "license": "MIT",
  "homepage": "https://github.com/your-username/rati#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/rati.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/rati/issues"
  },
  "dependencies": {
    "@permaweb/aoconnect": "^0.0.85",
    "arweave": "^1.15.7",
    "arlocal": "^1.1.62",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "eslint": "^9.25.0",
    "prettier": "^3.0.0"
  }
}
